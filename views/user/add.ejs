<%- include ../layout/header.ejs %>
<% if(messages.error) { %>
<p style="color:red;">
    <%= messages.error %>
</p>
<% } %>
<% if(messages.success) { %>
<p style="color:green;">
    <%= messages.success %>
</p>
<% } %>

<div class="container mt-3">
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    Tambah Data Buku
                </div>
                <div class="card-body">
                    <form action="/users/add" method="POST" name="form1">
                        <div class="form-group">
                            <tr>
                                <td>Judul</td>
                                <td>
                                    <input class="form-control" type="text" name="judul" id="judul" value="<%= judul %>">
                                </td>
                            </tr>
                        </div>
                        <div class="form-group">
                            <tr>
                                <td>Penulis</td>
                                <td>
                                    <input class="form-control" type="text" name="penulis" value="<%= penulis %>">
                                </td>
                            </tr>
                        </div>
                        <div class="form-group">
                            <tr>
                                <td>Tahun</td>
                                <td>
                                    <input class="form-control" type="text" name="tahun" value="<%= tahun %>">
                                </td>
                            </tr>
                        </div>
                        <div class="form-group">
                            <tr>
                                <td>Harga</td>
                                <td>
                                    <input class="form-control" type="text" name="harga" value="<%= harga %>">
                                </td>
                            </tr>
                        </div>
                        <div>
                            <tr>
                                <td></td>
                                <td>
                                    <input class="btn btn-outline-primary float-right" type="submit" name="Submit"
                                        value="Add">
                                </td>
                            </tr>
                        </div>

                    </form>
                    <a href="/tampil" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../layout/footer.ejs %>
